import pandas as pd 
import numpy as np 
import warnings 
warnings.filterwarnings('ignore')
under_pressure=pd.read_csv('Undder Pressure .csv')
Receivers_Stats=pd.read_csv('Receivers_Stats.csv')
qb_names=pd.DataFrame(under_pressure, columns= ['player'])
wr_names=pd.DataFrame(Receivers_Stats, columns= ['Player ']) 


Position_Choice=str(input ("Choose which position you would like to analyze: "))
while Position_Choice == 'Q' or 'R':
    if Position_Choice == 'Q':
        print (qb_names)
        Player_Q1=int(input("Choose One Quaterbacks you would like to analyze from this list above by putting the number left of their name: "))
        print ("You chose %s " % under_pressure.loc[Player_Q1]['player'])
        Player_Q2=int(input("Choose another Quaterback you want to compare your first choice to(please dont pick the same player): "))
        print ("You chose %s " % under_pressure.loc[Player_Q2]['player'])
    elif Position_Choice == 'R':
        print (wr_names)
        Player_R1=str(input("Chose one reciever you would like to analyze from this list above by putting the number left of their name: "))
        print ("You chose %s " % Receivers_Stats.loc[Player_R1]['Player '])
        Player_R2=int(input("Choose another receiver you want to compare your first choice to(please dont pick the same player): "))
        print ("You chose %s " % Receivers_Stats.loc[Player_Q2]['Player '])
print('that is not a poition we are working with')
